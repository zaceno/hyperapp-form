{
    "name": "@zxlabs/hyperapp-form",
    "version": "0.0.5",
    "description": "utility for forms and form-validation in hyperapp",
    "main": "src/index.js",
    "scripts": {
        "bundle": "rollup -i src/index.js -o dist/hyperappform.js --no-strict --no-esModule -mf iife -n hyperappform",
        "minify": "terser dist/hyperappform.js -o dist/hyperappform.js -mc --source-map includeSources,url=hyperappform.js.map",
        "build": "npm run bundle && npm run minify",
        "test": "ava"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/zaceno/hyperapp-form.git"
    },
    "keywords": [
        "hyperapp",
        "forms",
        "form",
        "validation"
    ],
    "author": "Zacharias Enochsson",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/zaceno/hyperapp-form/issues"
    },
    "homepage": "https://github.com/zaceno/hyperapp-form#readme",
    "peerDependencies": {
        "hyperapp": "2.x"
    },
    "devDependencies": {
        "ava": "^3.5.0",
        "esm": "^3.2.25",
        "hyperapp": "^2.0.4",
        "rollup": "^1.27.0",
        "terser": "^4.6.6",
        "undom": "^0.4.0"
    },
    "ava": {
        "require": [
            "esm"
        ]
    },
    "dependencies": {}
}
